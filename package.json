{
  "name": "node-mock-examples",
  "version": "1.0.0",
  "description": "Examples of tests that mock Node system APIs: fs, http, child_process, timers",
  "main": "index.js",
  "scripts": {
    "test": "mocha test/*-spec.js",
    "pretty": "prettier-standard 'test/*.js'",
    "prelint": "npm run pretty",
    "lint": "standard --verbose --fix test/*.js",
    "pretest": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bahmutov/node-mock-examples.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bahmutov/node-mock-examples/issues"
  },
  "homepage": "https://github.com/bahmutov/node-mock-examples#readme",
  "devDependencies": {
    "console-pop": "0.0.2",
    "execa": "^0.7.0",
    "fs-extra": "^4.0.0",
    "got": "^7.1.0",
    "mocha": "^3.4.2",
    "mock-fs": "^4.4.1",
    "mock-stdio": "^1.0.0",
    "nock": "^9.0.13",
    "prettier-standard": "^6.0.0",
    "sinon": "^2.3.8",
    "snap-shot": "^2.17.0",
    "standard": "^10.0.2",
    "stub-spawn-once": "^2.3.0"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "afterEach"
    ]
  }
